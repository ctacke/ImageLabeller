<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ImageLabeller.ViewModels"
             xmlns:models="using:ImageLabeller.Models"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             x:Class="ImageLabeller.Views.LabelView"
             x:DataType="vm:LabelViewModel">
    <Grid ColumnDefinitions="*,220" RowDefinitions="Auto,*,Auto" Margin="10">
        <!-- Top: Source Folder Picker and Current Class (Row 0, Col 0) -->
        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="10" Margin="0,0,10,10">
            <!-- Source Folder -->
            <Grid ColumnDefinitions="150,*,Auto" Height="35">
                <TextBlock Text="Source Folder:"
                          VerticalAlignment="Center"
                          Margin="5,0"/>
                <TextBox Grid.Column="1"
                        Text="{Binding SourceFolderPath}"
                        IsReadOnly="True"
                        VerticalContentAlignment="Center"
                        Margin="5,0"/>
                <Button Grid.Column="2"
                       Content="Browse..."
                       Command="{Binding BrowseSourceFolderCommand}"
                       Width="100"
                       Margin="5,0,0,0"/>
            </Grid>

            <!-- Current Class Label -->
            <TextBlock Text="{Binding CurrentClassLabel}"
                      FontSize="16"
                      FontWeight="Bold"
                      Foreground="#FFFFFF"
                      Margin="5,5,0,0"/>
        </StackPanel>

        <!-- Center: Image Viewer (Row 1, Col 0) -->
        <Border Grid.Row="1"
               Grid.Column="0"
               BorderBrush="#3F3F46"
               BorderThickness="1"
               Background="#1E1E1E"
               Margin="0,0,10,0">
            <Grid>
                <!-- Image display -->
                <Image Source="{Binding CurrentImage}"
                      Stretch="Uniform"
                      IsVisible="{Binding CurrentImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                <!-- "No image" message -->
                <TextBlock Text="No images loaded"
                          FontSize="24"
                          Foreground="#808080"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          IsVisible="{Binding CurrentImage, Converter={x:Static ObjectConverters.IsNull}}"/>

                <!-- TODO: Add Canvas overlay for bounding boxes -->
            </Grid>
        </Border>

        <!-- Right: Class Buttons (Row 0-1, Col 1) -->
        <Border Grid.Row="0"
               Grid.Column="1"
               Grid.RowSpan="2"
               BorderBrush="#3F3F46"
               BorderThickness="1"
               Background="#1E1E1E">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ImageClasses}"
                             Margin="5">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="models:ImageClass">
                            <Button Command="{Binding $parent[UserControl].((vm:LabelViewModel)DataContext).SelectClassCommand}"
                                   CommandParameter="{Binding}"
                                   HorizontalAlignment="Stretch"
                                   Margin="0,2"
                                   Padding="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <!-- Color indicator -->
                                    <Border Width="16"
                                           Height="16"
                                           Background="{Binding Color}"
                                           BorderBrush="#FFFFFF"
                                           BorderThickness="1"
                                           CornerRadius="2"/>

                                    <!-- Class ID and Name -->
                                    <TextBlock>
                                        <Run Text="{Binding Id}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding Name}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Bottom: Navigation (Row 2, Col 0-1) -->
        <Grid Grid.Row="2"
             Grid.Column="0"
             Grid.ColumnSpan="2"
             ColumnDefinitions="Auto,*,Auto"
             Margin="0,10,0,0">

            <Button Grid.Column="0"
                   Content="Previous"
                   Command="{Binding PreviousImageCommand}"
                   Width="100"
                   Padding="10,8"
                   Margin="0,0,10,0"/>

            <TextBlock Grid.Column="1"
                      Text="{Binding ImageCountText}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      FontSize="14"
                      FontWeight="Bold"
                      Foreground="#CCCCCC"/>

            <Button Grid.Column="2"
                   Content="Next"
                   Command="{Binding NextImageCommand}"
                   Width="100"
                   Padding="10,8"
                   Margin="10,0,0,0"/>
        </Grid>
    </Grid>
</UserControl>
