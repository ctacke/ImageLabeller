<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ImageLabeller.ViewModels"
             xmlns:models="using:ImageLabeller.Models"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             x:Class="ImageLabeller.Views.LabelView"
             x:DataType="vm:LabelViewModel"
             Focusable="True"
             KeyDown="OnKeyDown">

    <UserControl.Styles>
        <Style Selector="Button.ClassButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style Selector="Button.ClassButton:pointerover">
            <Setter Property="Background" Value="#2A2D2E"/>
        </Style>
    </UserControl.Styles>

    <Grid ColumnDefinitions="200,*,220" RowDefinitions="Auto,*,Auto" Margin="10">
        <!-- Left: Annotation List (Row 0-1, Col 0) -->
        <Border Grid.Row="0"
               Grid.Column="0"
               Grid.RowSpan="2"
               BorderBrush="#3F3F46"
               BorderThickness="1"
               Background="#1E1E1E"
               Margin="0,0,10,0">
            <Grid RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0"
                          Text="Objects in Image"
                          FontSize="14"
                          FontWeight="Bold"
                          Margin="10,10,10,5"/>

                <ScrollViewer Grid.Row="1"
                             VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding CurrentAnnotations}"
                                 Margin="5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:YoloAnnotation">
                                <Border BorderBrush="#2D2D30"
                                       BorderThickness="0,0,0,1"
                                       Padding="5"
                                       Margin="2">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Button Grid.Column="0"
                                               Command="{Binding $parent[ItemsControl].((vm:LabelViewModel)DataContext).SelectAnnotationCommand}"
                                               CommandParameter="{Binding}"
                                               HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Left"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Padding="5">
                                            <TextBlock>
                                                <Run Text="Class "/>
                                                <Run Text="{Binding ClassId}" FontWeight="Bold"/>
                                            </TextBlock>
                                        </Button>

                                        <Button Grid.Column="1"
                                               Content="Ã—"
                                               Command="{Binding $parent[ItemsControl].((vm:LabelViewModel)DataContext).DeleteAnnotationCommand}"
                                               CommandParameter="{Binding}"
                                               Width="30"
                                               Height="30"
                                               Padding="0"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#FF6B6B"
                                               Background="Transparent"
                                               BorderThickness="0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Top: Source Folder Picker and Current Class (Row 0, Col 1) -->
        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="10" Margin="0,0,10,10">
            <!-- Source Folder -->
            <Grid ColumnDefinitions="150,*,Auto" Height="35">
                <TextBlock Text="Source Folder:"
                          VerticalAlignment="Center"
                          Margin="5,0"/>
                <TextBox Grid.Column="1"
                        Text="{Binding SourceFolderPath}"
                        IsReadOnly="True"
                        VerticalContentAlignment="Center"
                        Margin="5,0"/>
                <Button Grid.Column="2"
                       Content="Browse..."
                       Command="{Binding BrowseSourceFolderCommand}"
                       Width="100"
                       Margin="5,0,0,0"/>
            </Grid>

            <!-- Current Class Label -->
            <TextBlock Text="{Binding CurrentClassLabel}"
                      FontSize="16"
                      FontWeight="Bold"
                      Foreground="#FFFFFF"
                      Margin="5,5,0,0"/>

            <!-- Auto-Labeling Section -->
            <Grid ColumnDefinitions="Auto,*" Height="35" Margin="0,5,0,0">
                <Button Grid.Column="0"
                       Content="Apply Model"
                       Command="{Binding ApplyModelCommand}"
                       Width="120"
                       Padding="10,8"
                       Margin="5,0"/>

                <TextBlock Grid.Column="1"
                          Text="{Binding ModelStatus}"
                          VerticalAlignment="Center"
                          FontSize="14"
                          Foreground="#CCCCCC"
                          Margin="10,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Center: Image Viewer (Row 1, Col 1) -->
        <Border Grid.Row="1"
               Grid.Column="1"
               BorderBrush="#3F3F46"
               BorderThickness="1"
               Background="#1E1E1E"
               Margin="0,0,10,0">
            <ScrollViewer x:Name="ImageScrollViewer"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto">
                <Grid x:Name="ZoomContainer"
                     PointerWheelChanged="OnImagePointerWheelChanged"
                     Background="Transparent">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                            <TranslateTransform X="0" Y="0"/>
                        </TransformGroup>
                    </Grid.RenderTransform>

                    <!-- Image display -->
                    <Image x:Name="ImageDisplay"
                          Source="{Binding CurrentImage}"
                          Stretch="Uniform"
                          IsVisible="{Binding CurrentImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                    <!-- Canvas overlay for drawing bounding boxes -->
                    <Canvas x:Name="AnnotationCanvas"
                           Background="Transparent"
                           PointerPressed="OnCanvasPointerPressed"
                           PointerMoved="OnCanvasPointerMoved"
                           PointerReleased="OnCanvasPointerReleased"
                           IsVisible="{Binding CurrentImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                    <!-- "No image" message -->
                    <TextBlock Text="No images loaded"
                              FontSize="24"
                              Foreground="#808080"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              IsVisible="{Binding CurrentImage, Converter={x:Static ObjectConverters.IsNull}}"/>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Right: Class Buttons (Row 0-1, Col 2) -->
        <Border Grid.Row="0"
               Grid.Column="2"
               Grid.RowSpan="2"
               BorderBrush="#3F3F46"
               BorderThickness="1"
               Background="#1E1E1E">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ClassButtonsItemsControl"
                             ItemsSource="{Binding ImageClasses}"
                             Margin="5">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="models:ImageClass">
                            <Button x:Name="ClassButton"
                                   Command="{Binding $parent[UserControl].((vm:LabelViewModel)DataContext).SelectClassCommand}"
                                   CommandParameter="{Binding}"
                                   Classes="ClassButton"
                                   HorizontalAlignment="Stretch"
                                   Margin="0,2"
                                   Padding="8">
                                <Button.Styles>
                                    <Style Selector="Button.ClassButton[Tag=Selected]">
                                        <Setter Property="Background" Value="#37373D"/>
                                        <Setter Property="BorderBrush" Value="{Binding Color}"/>
                                    </Style>
                                </Button.Styles>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <!-- Color indicator -->
                                    <Border Width="16"
                                           Height="16"
                                           Background="{Binding Color}"
                                           BorderBrush="#FFFFFF"
                                           BorderThickness="1"
                                           CornerRadius="2"/>

                                    <!-- Class ID and Name -->
                                    <TextBlock>
                                        <Run Text="{Binding Id}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding Name}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Bottom: Navigation (Row 2, Col 0-2) -->
        <Grid Grid.Row="2"
             Grid.Column="0"
             Grid.ColumnSpan="3"
             ColumnDefinitions="Auto,*,Auto"
             Margin="0,10,0,0">

            <Button Grid.Column="0"
                   Content="Previous"
                   Command="{Binding PreviousImageCommand}"
                   Width="100"
                   Padding="10,8"
                   Margin="0,0,10,0"/>

            <TextBlock Grid.Column="1"
                      Text="{Binding ImageCountText}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      FontSize="14"
                      FontWeight="Bold"
                      Foreground="#CCCCCC"/>

            <Button Grid.Column="2"
                   Content="Next"
                   Command="{Binding NextImageCommand}"
                   Width="100"
                   Padding="10,8"
                   Margin="10,0,0,0"/>
        </Grid>
    </Grid>
</UserControl>
